@model WebMVC.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
	    <div class="col-md-4">
		    <h4><img src="@Model.ImagePoster" alt="Movie Poster" class="img-fluid" style="max-height: 550px; max-width: 420px; object-fit: cover; border-radius: 5px;" /></h4>
	    </div>
		<div class="col-md-8">
			<h3>@Model.Title</h3>
			<p><strong>Genre: </strong>@Model.Genre</p>
			<p><strong>Link: </strong> <a href="@Model.Link" target="_blank">@Model.Link</a></p>

		<div>
			<a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@Model?.Id">Edit</a>
			<a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@Model?.Id">Delete</a>
			<a asp-action="Index" class="btn btn-sm btn-success">Back to Menu</a>
		</div>
			
		</div>
</div>
