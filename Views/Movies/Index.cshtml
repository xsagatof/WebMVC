@model WebMVC.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "MoviesIndex";
}


<p>
	<a asp-action="Create" class="btn btn-primary">Add new movie</a>
	
	<form asp-controller="Movies" asp-action="Index" method="get">
		<p>
			<select asp-for="MovieGenre" asp-items="Model.Genres">
				<option value="">All</option>
			</select>
		
			<label>Title: <input type="text" asp-for="SearchString"/></label>
			<input type="submit" value="Filter" />
		</p>
	</form>
</p>

<div class="album py-5 bg-light">
	<div class="container">
		<div class="row">
			@foreach (var item in Model.Movies!)
			{
				<div class="col-md-4">
					<div class="card mb-4 box-shadow">
						<img src="@item.ImagePoster" alt="Movie Poster" class="img-fluid" style="max-height: 550px; max-width: 420px; object-fit: cover; border-radius: 5px;" />
						<div class="card-body">
							<p class="card-text">
								 <!-- Update based on your model -->
							</p>
							<div class="d-flex justify-content-between align-items-center">
								<h3>@item.Title</h3>
								<div class="btn-group">
									<a asp-controller="Movies" asp-action="Details" asp-route-id="@item.Id" 
									   class="btn btn-sm btn-primary">Details</a>
									<a asp-controller="Movies" asp-action="Edit" asp-route-id="@item.Id" 
									   class="btn btn-sm btn-outline-secondary">Edit</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>

